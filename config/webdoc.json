{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "src/**/*.ts"
        ]
    },
    "plugins": [
        "plugins/markdown"
    ],
    "template": {
        "readme": "./README.md",
        "repository": "https://git.drmer.net/drmer/sound/"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": false
        },
        "applicationName": "Drmer Sound",
        "footer": "Made with â™¥ by Matt Karl (github.com/bigtimebuddy)",
        "copyright": "PIXI Copyright &copy; 2017 - 2021 Matt Karl.",
        "linenums": false,
        "googleAnalytics": "UA-103772589-1",
        "meta": {
            "title": "Drmer Sound API Documentation",
            "description": "Documentation for PixiJS Sound library",
            "keyword": "docs, documentation, pixi, pixijs, webaudio, html5, audio, javascript, jsdoc"
        }
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": false
    },
    "opts": {
        "encoding": "utf8",
        "recurse": true,
        "private": false,
        "lenient": true,
        "destination": "docs",
        "template": "@pixi/webdoc-template"
    }
}
